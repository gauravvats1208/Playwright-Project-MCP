{
  "name": "mcpproject",
  "version": "1.0.0",
  "description": "AI-Enhanced Test Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:ai": "npx playwright test ai-enhanced-ecommerce.spec.js",
    "test:basic": "npx playwright test basic-ecommerce.spec.js",
    "test:cucumber": "npx cucumber-js features --require features/step_definitions",
    "test:cucumber:debug": "npx cucumber-js features --require features/step_definitions --format progress",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "install:browsers": "npx playwright install"
  },
  "keywords": ["automation", "testing", "playwright", "ai"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.53.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
