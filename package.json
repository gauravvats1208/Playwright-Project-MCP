{
  "name": "mcpproject",
  "version": "1.0.0",
  "description": "AI-Enhanced Test Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "npx cucumber-js features --require features/step_definitions",
    "test:config": "node -e \"const config = require('./config/testUsers'); console.log('Available users:', config.getUserTypes()); console.log('Test user:', config.getUserCredentials('standard_user'));\"",
    "test:single": "npx cucumber-js --require features/step_definitions --tags",
    "test:cucumber": "npx cucumber-js features --require features/step_definitions",
    "test:cucumber:ai": "npx cucumber-js features/ai_enhanced_testing.feature --require features/step_definitions",
    "test:cucumber:extended": "npx cucumber-js features/extended_ecommerce_testing.feature --require features/step_definitions",
    "test:cucumber:basic": "npx cucumber-js features/saucedemo_ecommerce.feature --require features/step_definitions",
    "test:cucumber:all": "npx cucumber-js features/*.feature --require features/step_definitions",
    "test:cucumber:debug": "npx cucumber-js features --require features/step_definitions --format progress",
    "install:browsers": "npx playwright install"
  },
  "keywords": ["automation", "testing", "playwright", "ai"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.53.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3"
  }
}
